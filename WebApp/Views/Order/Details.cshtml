@model Models.OrderDetails

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <h1>Order Details</h1>

    <div>

        <hr />
        <div class="row">
            <div class="col-md-4">
                <img src=@Model.Product.Img_Url class="img-fluid img-thumbnail" alt="Responsive image">
                <h5>@Html.DisplayNameFor(model => model.Product.Product_Name)</h5>
                <h5>@Html.DisplayFor(model => model.Product.Product_Name)</h5>
                <h5>@Html.DisplayNameFor(model => model.Product.Price)</h5>
                <h5>@Html.DisplayFor(model => model.Product.Price)</h5>
                <h5>@Html.DisplayNameFor(model => model.Product.Description)</h5>
