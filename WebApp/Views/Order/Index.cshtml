@model IEnumerable<Models.OrderDetails>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1>My Orders</h1>


    <table class="table">
        <thead>
            <tr>
                <th>
                    Product_Id
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Product.Product_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Product.Price)
                </th>


                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.Product_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        <!--<a asp-action="Edit" asp-route-id="@item.Oid">Edit</a> |-->
                        <a asp-action="Details" asp-route-id="@item.Oid" class="btn btn-outline-danger">Details</a> |
                        <!-- <a asp-action="Delete" asp-route-id="@item.Oid">Delete</a>-->
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
